{
  "name": "sports-record-sharing-cloud-functions",
  "version": "1.0.0",
  "description": "云开发云函数 - 运动记录分享小程序后端服务",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "NODE_ENV=development node dist/index.js",
    "deploy": "npm run build && cloudbase functions:deploy",
    "deploy:single": "npm run build && cloudbase functions:deploy --function-name",
    "logs": "cloudbase functions:log",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix"
  },
  "keywords": [
    "tcb",
    "cloud-functions",
    "sports",
    "record-sharing",
    "miniprogram"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "@cloudbase/node-sdk": "^3.0.1",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "joi": "^17.11.0",
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "@types/node": "^20.8.0",
    "@types/express": "^4.17.20",
    "@types/cors": "^2.8.15",
    "@types/jsonwebtoken": "^9.0.4",
    "@types/bcryptjs": "^2.4.5",
    "@types/lodash": "^4.14.200",
    "@types/jest": "^29.5.6",
    "typescript": "^5.2.2",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "@typescript-eslint/eslint-plugin": "^6.7.5",
    "@typescript-eslint/parser": "^6.7.5",
    "eslint": "^8.51.0"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}