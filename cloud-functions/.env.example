# 云开发环境配置
CLOUDBASE_ENV_ID=your-env-id
CLOUDBASE_REGION=ap-shanghai

# JWT 配置
JWT_SECRET=your-jwt-secret-key
JWT_EXPIRES_IN=7d

# 数据库配置
DB_NAME=sports_records
DB_COLLECTION_USERS=users
DB_COLLECTION_RECORDS=records
DB_COLLECTION_COMMENTS=comments
DB_COLLECTION_LIKES=likes
DB_COLLECTION_MEDIA=media

# 文件存储配置
STORAGE_BUCKET=sports-records
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,mp4,mov,avi

# 小程序配置
MINIPROGRAM_APPID=your-miniprogram-appid
MINIPROGRAM_SECRET=your-miniprogram-secret

# 安全配置
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# API 配置
API_BASE_URL=https://your-api-domain.com
API_TIMEOUT=30000

# 日志配置
LOG_LEVEL=info
LOG_FILE=logs/app.log

# 开发配置
NODE_ENV=development
DEBUG=true
PORT=3000